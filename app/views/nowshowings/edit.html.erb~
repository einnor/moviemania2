				<%= f.label :synopsis %><br />
				<%= f.text_area :synopsis%><br />

				<%= f.label :category %> <br />
				<%= f.select :category, options_for_select(%w[Animation Comedy Drama Fantasy Horror Sci-fi Thriller]) %>/>

				<%= f.label :youtube_stub %><br />
				<%= f.text_field :youtubestub%><br />

				<%= f.label :price %><br />
				<%= f.text_field :price %><br />

				<%= f.label :cinema_showing %>
				<%= f.collection_select :cinemashowing, Cinema.order(:name), :id, :name, include_blank:true %>

				<%= image_tag @cinema.cinemalogo.url(:thumb) %>

				<%= f.label :cinemalogo %>
				<%= f.file_field :cinemalogo %>

